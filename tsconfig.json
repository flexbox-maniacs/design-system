{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@scripts": ["./node_modules/scripts/scripts.ts"],
      "@theme": ["./node_modules/theme-default/scss/main.scss"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
